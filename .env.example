# AI_TEAM Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# ============================================
# LLM API Keys
# ============================================

# OpenAI API Key (для GPT моделей)
# Получить: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (для Claude моделей)
# Получить: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Perplexity API Key (опционально, для researcher агента)
# Получить: https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# ============================================
# Database & Cache
# ============================================

# Redis password (оставить пустым для localhost без пароля)
REDIS_PASSWORD=

# PostgreSQL connection (если используется)
POSTGRES_USER=ai_team
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=ai_team_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Temporal
# ============================================

# Temporal server (обычно localhost для dev)
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=ai-team

# ============================================
# Application Settings
# ============================================

# Окружение (dev, staging, production)
AI_TEAM_ENV=dev

# Debug mode (true для development)
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# Monitoring & Observability (опционально)
# ============================================

# Sentry DSN для error tracking
SENTRY_DSN=

# OpenTelemetry endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=

# ============================================
# Security
# ============================================

# JWT Secret для API аутентификации
JWT_SECRET=your-secret-key-change-this-in-production

# Allowed origins для CORS (разделённые запятыми)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
